<?xml version="1.0" encoding="utf-8"?>
<!-- item_connection.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewYourIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your IP: " />

    <TextView
        android:id="@+id/textViewConnectionIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection IP: " />

    <TextView
        android:id="@+id/textViewTimeStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time: " />

    <TextView
        android:id="@+id/textViewTimeEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Time: " />

    <TextView
        android:id="@+id/textViewSessionTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session Time: " />

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: " />

    <TextView
        android:id="@+id/textViewFiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Files: " />

</LinearLayout>
